@model IEnumerable<NZWalks.UI.Models.Dto.RegionDto>

@{

}

<h1 class= "mt-2">Regions</h1>
<div class="d-flex justify-content-end"></div>
<div class="mb-3">
    <a class="btn btn-primary" asp-controller="Regions" asp-action="Add">Add Region</a> 

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
            </tr>
        }
    </tbody>