
@model NZWalks.UI.Models.Dto.WalksDto
@{
}

<h1 class="mt-3">Edit Region</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" readonly  />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="mt-3">
        <label class="form-label">Length</label>
        <input type="text" asp-for="Length" class="form-control" />
    </div>
    <div class="mt-3">
        <label class="form-label">WalkImageUrl</label>
        <input type="text" asp-for="WalkImageUrl" class="form-control" />
    </div>
    <div class="mt-3">
        <label class="form-label">DifficultyId</label>
        <input type="text" asp-for="Difficulty.Id" class="form-control" />
    </div>
    <div class="mt-3">
        <label class="form-label">RegionId</label>
        <input type="text" asp-for="Region.Id" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary" asp-controller="walks" asp-action="update">Save</button>
    </div>
</form>